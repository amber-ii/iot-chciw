<script>
    let navs = Array.from(document.querySelectorAll('.head>ul>li'))
    let bodys = Array.from(document.querySelectorAll('.body > ul'))
    let pernames = document.getElementById('permission').innerHTML

    if(pernames.includes('工務課')){
            navs[0].classList.remove('unblock')
            navs[6].classList.remove('unblock')
    }else if(pernames.includes('酸鹼')){
            navs[1].classList.remove('unblock')
            navs[0].classList.remove('active')
            navs[1].classList.add('active')
            navs[2].classList.remove('unblock')
            navs[4].classList.remove('unblock')
            navs[5].classList.remove('unblock')
            navs[9].classList.remove('unblock')
            navs[10].classList.remove('unblock')
            navs[11].classList.remove('unblock')
            bodys[1].classList.remove('unblock')
            bodys[0].classList.add('unblock')
    }else if(pernames.includes('特化')){
            navs[3].classList.remove('unblock')
            navs[8].classList.remove('unblock')
            navs[0].classList.remove('active')
            navs[3].classList.add('active')
            bodys[3].classList.remove('unblock')
            bodys[0].classList.add('unblock')
    }else if(pernames.includes('您好')){
            navs[0].classList.remove('unblock')
    }else if(pernames.includes('環安')){
            navs[7].classList.remove('unblock')
            navs[7].classList.add('active')
            bodys[0].classList.add('unblock')
            bodys[7].classList.remove('unblock')
    }else{
        navs[0].classList.remove('unblock')
        navs[1].classList.remove('unblock')
        navs[2].classList.remove('unblock')
        navs[3].classList.remove('unblock')
        navs[4].classList.remove('unblock')
        navs[5].classList.remove('unblock')
        navs[6].classList.remove('unblock')
        navs[7].classList.remove('unblock')
        navs[8].classList.remove('unblock')
        navs[9].classList.remove('unblock')
        navs[10].classList.remove('unblock')
        navs[11].classList.remove('unblock')
    }

    navs.forEach((nav) => {
        nav.addEventListener('click', function() {
            document.querySelector('.head>ul>li.active').classList.remove('active')
            this.classList.add('active')
            document.querySelector('.body > ul:not(.unblock)').classList.add('unblock')
            let index = navs.indexOf(this)
            bodys[index].classList.remove('unblock')
           
        })
    })
        setTimeout(() => {
            $(document).ready(function() {
                $('.loading').fadeOut(1000);
                $('.word').fadeOut(500);
            });
        }, 1500);


</script>
